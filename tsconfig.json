{
	"compilerOptions": {
		"strict": true,
		"module": "node16",
		"moduleResolution": "node16",
		"target": "es2022",
		"lib": ["es2022"],
		"declaration": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"outDir": "./dist",
		"rootDir": "./src"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist", "tests", "nodes"]
}
